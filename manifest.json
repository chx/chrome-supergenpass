{
	"name": "ChromeGenPass",
	"version": "2.1",

	"description": "Clickless use of SuperGenPass generated passwords",
	"icons": {
		"16": "img/ktouch16.png",
		"48": "img/ktouch48.png",
		"128": "img/ktouch128.png"
	},

	"background_page": "html/background.html",
	"options_page": "options/options.html",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["js/page/init.js", "js/page/events.js", "js/page/main.js"]
		}
	],
	"page_action": {
		"default_icon": "img/supergenpass.png",
		"default_title": "Generate SuperGenPass passwords",
		"default_popup": "pageAction/pageAction.html"
	},
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	]
}
